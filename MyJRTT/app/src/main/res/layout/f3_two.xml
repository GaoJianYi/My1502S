<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#D4D4D4"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/f3_two_image1" />

    <Button
        android:background="@mipmap/addicon_titlebar_topic_normal"
        android:layout_marginLeft="20dp"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/f3_two_image2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/f3_two_image1" />

    <Button
        android:background="@mipmap/blacklist_popup_profile_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </LinearLayout>

        <LinearLayout

            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
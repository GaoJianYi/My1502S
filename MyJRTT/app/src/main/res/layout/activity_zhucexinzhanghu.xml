<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhucexinzhanghu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leftbackbutton_titlebar_normal"
        android:id="@+id/image_zhuce" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="手机号注册"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/shuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="账号：手机号"
        />
    <EditText
        android:layout_below="@id/shuru"
        android:id="@+id/f4_edt_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="密码："
        />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f4_edt_mima"
        android:layout_marginLeft="80dp"
        android:src="@drawable/wiper_switch_slipper_btn_profile_night"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/f4_edt_mima"
        android:layout_marginLeft="110dp"
        android:text="同意《"/>

    <Button
        android:id="@+id/xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/f4_edt_mima"
        android:layout_marginLeft="160dp"
        android:text="今日头条协议"
        android:background="#00000000"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/qwertyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/f4_edt_mima"
        android:layout_marginLeft="250dp"
        android:text="》"/>

    <Button
        android:id="@+id/xiayibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="完成"
        android:layout_marginTop="55dp"
        android:textColor="@color/red"
        android:layout_below="@+id/xieyi"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="获取验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zhuce_duanxin"
        android:layout_alignBaseline="@+id/shuru"
        android:layout_alignBottom="@+id/shuru"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/xa_t1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:text="版本更新"/>
    <Button
        android:text="否"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttt1"
        android:layout_alignParentEnd="true"
        android:id="@+id/xz_btton2" />

    <TextView
        android:layout_below="@id/xa_t1"
        android:text="现在检测到版本是否更新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttt1"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="是"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xz_button"
        android:layout_alignBaseline="@+id/xz_btton2"
        android:layout_alignBottom="@+id/xz_btton2"
        android:layout_toStartOf="@+id/xz_btton2" />
</RelativeLayout>
